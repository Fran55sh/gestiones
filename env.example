# Variables de Entorno para Producción
# Copiar este archivo a .env y configurar los valores reales
# NO COMMITEAR .env AL REPOSITORIO

# ==============================================================================
# SEGURIDAD - CRÍTICO
# ==============================================================================
# Generar una clave secreta fuerte:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERAR_UNA_CLAVE_SECRETA_FUERTE_AQUI

# Cookies seguras (true en producción con HTTPS)
SESSION_COOKIE_SECURE=true

# ==============================================================================
# CONFIGURACIÓN DE EMAIL (Zoho Mail)
# ==============================================================================
MAIL_SERVER=smtp.zoho.com
MAIL_PORT=465
MAIL_USE_TLS=False
MAIL_USE_SSL=True
MAIL_USERNAME=administracion@novagestiones.com.ar
MAIL_PASSWORD=TU_CONTRASEÑA_DE_APLICACION_AQUI
MAIL_DEFAULT_SENDER=administracion@novagestiones.com.ar

# ==============================================================================
# CONFIGURACIÓN DE FLASK
# ==============================================================================
FLASK_ENV=production
FLASK_APP=app_refactored.py

# ==============================================================================
# CONFIGURACIÓN DE GUNICORN (Opcional - se puede ajustar en docker-compose)
# ==============================================================================
# WORKERS=2
# THREADS=2
# TIMEOUT=120

# ==============================================================================
# CONFIGURACIÓN DE BASE DE DATOS (Si se implementa en el futuro)
