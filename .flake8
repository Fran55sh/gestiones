[flake8]
max-line-length = 127
exclude =
    .git,
    __pycache__,
    migrations,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    app/routes/*
ignore =
    E203,
    E501,
    W503
per-file-ignores =
    __init__.py:F401
    tests/*:F401
    conftest.py:F401
    app/web/contact.py:C901
max-complexity = 15

